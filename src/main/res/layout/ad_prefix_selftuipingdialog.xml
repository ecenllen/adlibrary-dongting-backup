<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/oval_dialog_background"
    android:orientation="vertical"
    android:theme="@style/ad_prefix_dialog">

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/ad_prefix_white"
        android:gravity="center"
        android:text="您确定要退出本软件？"
        android:textColor="@color/ad_prefix_black"
        android:textSize="18sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/ad_prefix_dialog">

        <ImageView
            android:id="@+id/my_image_view"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ad_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/my_image_view"
            android:layout_alignRight="@+id/my_image_view"
            android:background="@mipmap/ad_prefix_selfad_close"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ad_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_image_view"
            android:layout_alignTop="@+id/my_image_view"
            android:background="@mipmap/ad_prefix_ad_log"
            android:visibility="gone" />

        <View
            android:id="@+id/selectLine"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/my_image_view"
            android:layout_alignRight="@+id/my_image_view"
            android:layout_gravity="center_horizontal"
            android:background="#EEEEEE" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lyt_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/ad_prefix_white">

        <Button
            android:id="@+id/bt_quit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/ad_prefix_black" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#EEEEEE" />

        <Button
            android:id="@+id/bt_look"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:text="去看看"
            android:textColor="@color/ad_prefix_black" />
    </LinearLayout>


</LinearLayout>


