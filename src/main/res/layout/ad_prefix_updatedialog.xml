<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_updatedialogAll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/ad_prefix_dialog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/ad_prefix_white">

        <TextView

            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/ad_prefix_white"
            android:gravity="center"
            android:text="更新信息了，很多哦"
            android:textColor="@color/ad_prefix_black"
            android:textSize="18sp" />

    </ScrollView>


    <View
        android:id="@+id/selectLine"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#66CCFF" />

    <LinearLayout
        android:id="@+id/lyt_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_quit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/ad_prefix_white"
            android:text="更新" />

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#66CCFF" />

        <Button
            android:id="@+id/bt_look"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/ad_prefix_white"
            android:text="取消" />
    </LinearLayout>


</LinearLayout>


